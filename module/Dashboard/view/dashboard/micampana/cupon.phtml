if (count($datos) == 1) {
    foreach ($datos as $mensaje) {

        if ($mensaje['cantidad'] == 0) {
            $mensaje = "Código no existe.";
            $clase = 'alert-danger';
            $error = 'Error!';
        } else {
            if ($mensaje['tipo'] == 'C') {
                $mensaje = "Código válido.";
